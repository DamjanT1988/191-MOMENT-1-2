<header>
    <div class="container top">
        <img src='/assets/MGG-logotype.jpg' class="img-fluid img" id="figure" />
        <div class="datetop"> Dagens datum är: @DateTime.Now.ToString("yyy/MM/dd") </div>

        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</header>


<sidebar>
    <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="nav navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                            <span class="oi oi-home text-dark start" aria-hidden="true"></span> Start
                        </NavLink>
                    </li>

                    <li class="nav-item">
                        <NavLink class="nav-link" href="education">
                            <span class="oi oi-book text-dark education" aria-hidden="true"></span> Education
                        </NavLink>
                    </li>

                    <li class="nav-item">
                        <NavLink class="nav-link" href="convert">
                            <span class="oi oi-contrast text-dark convert" aria-hidden="true"></span> Convert
                        </NavLink>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    </sidebar>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
